<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dp_45"
    android:background="@color/homeback"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <include
        android:id="@+id/pi_title"
        layout="@layout/fragment_home_head" />

    <com.scwang.smart.refresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <LinearLayout
                android:id="@+id/ll_attent_tag"
                android:layout_width="match_parent"
                android:layout_height="249dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="vertical"
                android:paddingTop="5.0dip">

                <ImageView
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="image"
                    app:srcCompat="@mipmap/banner1"
                    tools:ignore="MissingConstraints" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcy_tool"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="@dimen/qb_px_10"
                    android:background="@drawable/card_corner_white_bg"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:id="@+id/tv_check_frad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/qb_px_20"
                    android:text="风险自查"
                    android:textColor="#ff333333"
                    android:textSize="18.0sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/qb_px_10"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/fl_virus_check"
                        android:layout_width="fill_parent"
                        android:layout_height="75.0dip"
                        android:layout_marginRight="2.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/card_corner_white_bg">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15.0dip"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="APP自检"
                                android:textColor="#ff1c283f"
                                android:textSize="14.0sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="手机自测可疑APP"
                                android:textColor="#ff666666"
                                android:textSize="11.0sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:scaleType="centerCrop"
                            android:src="@drawable/iv_scaov_bg" />

                        <RelativeLayout
                            android:id="@+id/ll_checkapp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="8.0dip">

                            <ImageView
                                android:id="@+id/iv_check_app"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/iv_fruad_check" />
                        </RelativeLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_fruad_check"
                        android:layout_width="fill_parent"
                        android:layout_height="75.0dip"
                        android:layout_marginLeft="2.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/card_corner_white_bg">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15.0dip"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_frad"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="风险查询"
                                android:textColor="#ff1c283f"
                                android:textSize="14.0sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="支付社交账号核验"
                                android:textColor="#ff666666"
                                android:textSize="11.0sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:scaleType="centerCrop"
                            android:src="@drawable/iv_scaov_bg" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="8.0dip"
                            android:scaleType="centerCrop"
                            android:src="@drawable/iv_virus_check" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_head"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/qb_px_20"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_new_case"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10.0dip"
                        android:text="最新动态"
                        android:textColor="#ff333333"
                        android:textSize="18.0sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="10.0dip"
                        android:background="@drawable/bg_white_crop_head_8dp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcy_newcase"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/card_corner_white_bg"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintHeight_default="wrap"
                        app:layout_constraintHeight_max="500dp" />

                </FrameLayout>

                <include android:id="@+id/ly_morecase" layout="@layout/item_more_case" android:visibility="gone"/>
            </LinearLayout>
        </ScrollView>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</LinearLayout>