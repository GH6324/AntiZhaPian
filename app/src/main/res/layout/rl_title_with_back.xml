<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_title"
    android:background="@drawable/status_bar_bg"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dp_65"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@+id/iv_back"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:layout_width="30.0dip"
        android:layout_height="55.0dip"
        android:layout_marginLeft="5.0dip"
        android:layout_marginTop="23.0dip"
        android:src="@drawable/back_bla_arrow"
        android:scaleType="fitCenter" />
    <TextView android:textSize="@dimen/sp_17"
        android:textColor="#ff1d1a33"
        android:ellipsize="end"
        android:id="@+id/tv_title"
        android:text = "11111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        android:lines="1" android:maxEms="12"
        android:singleLine="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:textColor="#ff1d1a33"
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_15"
        android:lines="1"
        android:singleLine="true"
        android:maxLength="15"
        android:layout_alignParentRight="true" />
    <FrameLayout
        android:padding="5.0dip"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginTop="25.0dip"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
</RelativeLayout>
